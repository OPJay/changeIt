<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorAccent">@color/skyBlue</item>
    </style>
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style
        name="MyDialog" parent="@android:style/Theme.Material.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:tint">@color/skyBlue</item>
        <item name="android:progressTint">@color/skyBlue</item>
        <item name="android:colorAccent">@color/skyBlue</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">#000000</item>
    </style>

    <style name="MyDialogHolo" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:tint">@color/skyBlue</item>
        <item name="colorAccent">@color/skyBlue</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppThemeZoomImage" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="MyTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/transparent</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="toolbar_theme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/skyBlue</item>
        <item name="titleTextColor">@color/white</item>
    </style>
</resources>
